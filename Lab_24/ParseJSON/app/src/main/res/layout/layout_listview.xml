<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgNgoaiTe"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_launcher" /> <!-- Placeholder, sẽ ẩn nếu không có ảnh -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/txtTenNgoaiTe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đô la Mỹ"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMaNgoaiTe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USD"
            android:textSize="14sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="5dp">

            <TextView android:text="Mua TM:" android:layout_marginEnd="5dp"/>
            <TextView android:id="@+id/txtMuaTM_VTB" android:text="23,000"/>

            <TextView android:text="Mua CK:" android:layout_marginEnd="5dp"/>
            <TextView android:id="@+id/txtMuaCK_VTB" android:text="23,010"/>

            <TextView android:text="Bán TM:" android:layout_marginEnd="5dp"/>
            <TextView android:id="@+id/txtBanTM_VTB" android:text="23,500"/>

            <TextView android:text="Bán CK:" android:layout_marginEnd="5dp"/>
            <TextView android:id="@+id/txtBanCK_VTB" android:text="23,510"/>

            <TextView android:text="Bán eTax:" android:layout_marginEnd="5dp"/>
            <TextView android:id="@+id/txtBanETax_VTB" android:text="23,520"/>
        </GridLayout>

    </LinearLayout>
</LinearLayout>